def utils, streams
node {
    checkout scm
    utils = load("utils.groovy")
    streams = load("streams.groovy")
}

properties([
    pipelineTriggers([
        // run every 24h only for now
        cron("H H * * *")
    ])
])

node {
    // cron or manual build: build all mechanical streams
    streams.mechanical.each{ streams.build_stream(it) }
}
